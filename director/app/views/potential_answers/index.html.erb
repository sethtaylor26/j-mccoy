<h1>Listing potential_answers</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potential_answers.each do |potential_answer| %>
      <tr>
        <td><%= potential_answer.id %></td>
        <td><%= potential_answer.question.id %> - <%= potential_answer.question.question %></td>
        <td><%= potential_answer.answer %></td>
        <td><%= link_to 'Show', potential_answer %></td>
        <td><%= link_to 'Edit', edit_potential_answer_path(potential_answer) %></td>
        <td><%= link_to 'Destroy', potential_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Potential answer', new_potential_answer_path %>

<ul class="nav pull-right">	
  <li><%= link_to "Home",         root_path %></li>
  <% if user_signed_in? %>
  <li><%= link_to "Profile", edit_user_registration_path %></li>
  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
  <% else %>
  <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</ul>
