<h1>Listing recommendation_types</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Descr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendation_types.each do |recommendation_type| %>
      <tr>
        <td><%= recommendation_type.type %></td>
        <td><%= recommendation_type.descr %></td>
        <td><%= link_to 'Show', recommendation_type %></td>
        <td><%= link_to 'Edit', edit_recommendation_type_path(recommendation_type) %></td>
        <td><%= link_to 'Destroy', recommendation_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation type', new_recommendation_type_path %>
