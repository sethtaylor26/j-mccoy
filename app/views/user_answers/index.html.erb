<h1>Listing user_answers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Answer Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_answers.each do |user_answer| %>
      <tr>
        <td><%= user_answer.user.email %></td>
        <td><%= user_answer.potential_answer.question.question %></td>
        <td><%= user_answer.potential_answer.answer %></td>
        <td><%= user_answer.potential_answer.event_type_answer_weights %></td>
        <td><%= link_to 'Show', user_answer %></td>
        <td><%= link_to 'Edit', edit_user_answer_path(user_answer) %></td>
        <td><%= link_to 'Destroy', user_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User answer', new_user_answer_path %>

<hr>

<ul class="nav pull-right">	
  <li><%= link_to "Home",         root_path %></li>
  <% if user_signed_in? %>
  <li><%= link_to "Profile", edit_user_registration_path %></li>
  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
  <% else %>
  <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</ul>