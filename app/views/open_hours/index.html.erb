<h1>Listing open_hours</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Day of the week</th>
      <th>Open hour</th>
      <th>Close hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_hours.each do |open_hour| %>
      <tr>
        <td><%= open_hour.event.title %></td>
        <td><%= open_hour.day_of_the_week %></td>
        <td><%= open_hour.open_hour %></td>
        <td><%= open_hour.close_hour %></td>
        <td><%= link_to 'Show', open_hour %></td>
        <td><%= link_to 'Edit', edit_open_hour_path(open_hour) %></td>
        <td><%= link_to 'Destroy', open_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Open hour', new_open_hour_path %>

<h2>Import Open Hours</h2>

<%= form_tag import_open_hours_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<hr>

<ul class="nav pull-right"> 
  <li><%= link_to "Home",         root_path %></li>
  <% if user_signed_in? %>
  <li><%= link_to "Profile", edit_user_registration_path %></li>
  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
  <% else %>
  <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</ul>