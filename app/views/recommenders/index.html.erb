<h1>Listing recommenders</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommenders.each do |recommender| %>
      <tr>
        <td><%= recommender.id %></td>
        <td><%= recommender.first_name %></td>
        <td><%= recommender.last_name %></td>
        <td><%= recommender.descr %></td>
        <td><%= link_to 'Show', recommender %></td>
        <td><%= link_to 'Edit', edit_recommender_path(recommender) %></td>
        <td><%= link_to 'Destroy', recommender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommender', new_recommender_path %>

<hr>

<ul class="nav pull-right">	
  <li><%= link_to "Home",         root_path %></li>
  <% if user_signed_in? %>
  <li><%= link_to "Profile", edit_user_registration_path %></li>
  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
  <% else %>
  <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</ul>
